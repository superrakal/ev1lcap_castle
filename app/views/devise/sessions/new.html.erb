<div class="admin_form">
    <h2>Авторизация</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      <div class="actions">
        <%= f.submit "Войти" %>
      </div>
    <% end %>
</div>

