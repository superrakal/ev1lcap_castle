<article class="post"><header><div class="title"><h2>{{article.title}}</h2><p>{{article.subtitle}}</p></div><div class="meta"><time class="published">{{article.formattedCreatedAt}}<p class="geolocation"><i class="fa fa-map-marker"></i>&nbsp;{{article.city}}</p></time></div></header><a class="image featured"><img src={{article.image_link}}></a>{{#if article.music_link}}<p class="audio">{{audio-player src=article.music_link}}</p>{{/if}}<p class="text">{{article.safeText}}</p></article>